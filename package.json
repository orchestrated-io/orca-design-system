{
  "name": "orchestrated-design-system",
  "scripts": {
    "audit-ci": "lerna run audit-ci",
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint",
    "test": "lerna run test-coverage",
    "start": "lerna run start",
    "dist": "lerna run dist",
    "publish:canary": "lerna publish --canary --yes",
    "publish:package": "lerna publish from-package --yes"
  },
  "lint-staged": {
    "packages/*/{src,lib}/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "skipCI": false,
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "audit-ci": "^2.5.1",
    "husky": "^3.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  }
}
