{
  "name": "orchestrated-design-system",
  "scripts": {
    "audit-ci": "lerna run audit-ci",
    "bootstrap": "lerna link && lerna exec npm i -- --no-optional",
    "lint": "lerna run lint",
    "test": "lerna run test-coverage",
    "start": "lerna run start",
    "dist": "lerna run dist",
    "publish:canary": "lerna publish --canary --yes",
    "publish:package": "lerna publish from-package --yes"
  },
  "lint-staged": {
    "packages/*/{src,lib}/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "./installGitSecrets.sh &&  git secrets --register-aws && git-secrets --scan -r && npm run audit-ci",
      "pre-commit": "lint-staged && npm test"
    }
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.2",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "audit-ci": "^2.5.1",
    "lerna": "^3.20.2"
  }
}
